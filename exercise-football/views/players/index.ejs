<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Players Homepage</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheet/style.css' />
</head>

<body class="container">
  <nav class="navbar navbar-expand-lg bg-dark mb-5">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">FootbalTeam</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/clubs">Clubs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/players">Players</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/agents">Agents</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <a class="btn btn-primary" href="/players/create">Create new player</a>

  <table class="table mt-5 bg-dark">
    <thead class="bg-primary">
      <tr>
        <th scope="col">#ID</th>
        <th scope="col">Name</th>
        <th scope="col">Surname</th>
        <th scope="col">Birthdate</th>
        <th scope="col">Position</th>
        <th scope="col">Club</th>
        <th scope="col">Agent</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% players.forEach(player=> { %>
        <tr>
          <th scope="row">
            <a href="/players/<%= player._id %>">
              <%= player._id %>
            </a>
          </th>
          <td>
            <%= player.name %>
          </td>
          <td>
            <%= player.surname %>
          </td>
          <td>
            <%= new Date(player.birthDate).toLocaleDateString("en-US") %>
          </td>
          <td>
            <%= player.position %>
          </td>
          <td>
            <% if (player.club) { %>
             <a href="/clubs/<%= player.club._id %>/view"><%= player.club.name %></a>
            <% } else { %>
              /
            <% } %>
          </td>
          <td>
            <% if (player.agent) { %>
             <a href="/agents/<%= player.agent._id %>/view"><%= player.agent.name %></a>
            <% } else { %>
              /
            <% } %>
          </td>
          <td>
            <a class="btn btn-raised btn-secondary" href="/players/<%= player._id %>">Edit</a>
            <a class="btn btn-raised btn-danger m-1" href="javascript:;"
              onclick="deletePlayer('<%= player._id %>')">Delete</a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script src="javascripts/index.js"></script>
</body>

</html>